@model FlashcardFolderInfoViewModel


<div>
    <div class="form-group">
        <div class="col-md-5">
            <input asp-for="FlashcardFolderId" class="form-control" type="hidden" value="@Model.FlashcardFolderId" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Name" class="form-control" value="@Model.Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Subject" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Subject" class="form-control" value="@Model.Subject"/>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            @Html.TextAreaFor(model => model.Description, new { style = "width: 500px; height: 150px;", placeholder = Model.Description, required = "" })
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
</div>