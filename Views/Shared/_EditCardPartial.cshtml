@model FlashcardViewModel

<form asp-action="EditCard" method="post" class="form-horizontal" role="form">

    <div class="form-group">
        <input asp-for="FlashcardFolderId" class="form-control" type="hidden" value="@Model.FlashcardFolderId" />
    </div>
    <div class="form-group">
        <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />
    </div>

    <div class="card-group">

        <div class="card">
            <div class="card-title pl-2">
                <p class="text-muted flashcard-label-font">Front</p>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center">
                <div class="form-group">
                    <span><input asp-for="FrontText" class="form-control flashcard-input" /></span>
                    <span asp-validation-for="FrontText" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-title pl-2">
                <p class="text-muted flashcard-label-font">Back</p>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center">
                <div class="form-group">
                    <span><input asp-for="BackText" class="form-control flashcard-input" /></span>
                    <span asp-validation-for="BackText" class="text-danger"></span>
                </div>
            </div>
        </div>

    </div>

    <div class="form-group mt-3">
        <input type="submit" class="btn btn-primary" value="Update Card" />
    </div>

</form> 